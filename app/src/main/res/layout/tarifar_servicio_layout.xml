<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lbl_reserva"
            android:layout_width="wrap_content"
            android:text="RESERVA:"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txt_reserva"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="@android:color/black"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lbl_pasajero"
            android:layout_width="wrap_content"
            android:text="PASAJERO:"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txt_pasajero"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="@android:color/black"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lbl_telefono"
            android:layout_width="wrap_content"
            android:text="TELEFÓNO:"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txt_telefono"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="@android:color/black"
            android:layout_marginLeft="2dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lbl_direccion"
            android:layout_width="wrap_content"
            android:text="DIRECCIÓN:"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txt_direccion"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="@android:color/black"
            android:layout_marginLeft="2dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lbl_hora"
            android:layout_width="wrap_content"
            android:text="HORA:"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txt_hora"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="@android:color/black"
            android:layout_marginLeft="2dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lbl_pago"
            android:layout_width="wrap_content"
            android:text="TIPO DE PAGO:"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txt_pago"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="@android:color/black"
            android:layout_marginLeft="2dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lbl_observaciones"
            android:layout_width="wrap_content"
            android:text="OBSERVACIONES:"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txt_observaciones"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="@android:color/black"
            android:layout_marginLeft="2dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:gravity="bottom">

        <com.ncorti.slidetoact.SlideToActView
            android:id="@+id/btn_tarifar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            android:paddingBottom="6sp"
            app:area_margin="0dp"
            app:outer_color="@color/tarifar"
            app:text="Tarifar"
            app:text_size="20sp" />
    </RelativeLayout>

</LinearLayout>